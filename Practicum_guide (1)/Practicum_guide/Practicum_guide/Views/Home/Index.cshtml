@model IEnumerable<ECommerceClassLibrary.Event>
@{
    ViewData["Title"] = "Home Page";
    var total = (int)(ViewBag.TotalEvents ?? 0);
}

<div class="container mt-3">
    <h2>Realtime Dashboard</h2>
    <p><strong>Total Events</strong>@total</p>
</div>

<form asp-controller="Home" asp-action="EnqueueTest" method="post" class="mb-3">
    <label for="count">Enqueue test message:</label>
    <input id="count" name="count" type="number" value="100" min="1" max="10000"/>
    <button type="submit" class="btn btn-primary">Enqueue</button>
</form>

<table class="table table-sm table-striped">
    <thead></thead>
</table>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
